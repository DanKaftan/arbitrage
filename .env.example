# ============================================================================
# Polymarket API Configuration
# ============================================================================
POLYMARKET_API_KEY=your_api_key_here
POLYMARKET_API_SECRET=your_api_secret_here
POLYMARKET_API_BASE_URL=https://clob.polymarket.com

# ============================================================================
# Supabase Configuration
# ============================================================================
# Optional: Configure Supabase for trader persistence
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_TABLE_NAME=traders

MANAGER_SUPABASE_SYNC_INTERVAL

# ============================================================================
# Execution Layer Configuration
# ============================================================================
EXECUTION_MAX_RETRIES=3
EXECUTION_RETRY_DELAY=0.5
EXECUTION_TIMEOUT=10
EXECUTION_PRICE_PRECISION=4
EXECUTION_SIZE_PRECISION=2

# ============================================================================
# Manager Configuration
# ============================================================================
MANAGER_POLL_INTERVAL=1.0
MANAGER_MAX_EXPOSURE=10000.0
MANAGER_MAX_PNL_LOSS=-1000.0
MANAGER_STATUS_INTERVAL=5.0
MANAGER_EMERGENCY_SHUTDOWN=true

# ============================================================================
# Trader Default Configuration
# ============================================================================
# These are defaults used when creating new traders
TRADER_DEFAULT_BUDGET=1000.0
TRADER_DEFAULT_MIN_GAP=0.01
TRADER_DEFAULT_PRICE_IMPROVEMENT=0.001
TRADER_DEFAULT_MAX_POSITION=500.0
TRADER_DEFAULT_TIMEOUT=30

# ============================================================================
# Pre-configured Traders (Optional)
# ============================================================================
# You can pre-configure traders via .env, or use the dashboard to create them
# Format: comma-separated values, one per trader
# TRADER_MARKETS=market-slug-1,market-slug-2,market-slug-3
# TRADER_BUDGETS=1000,2000,1500
# TRADER_MIN_GAPS=0.01,0.02,0.015
# TRADER_NAMES=Trader 1,Trader 2,Trader 3
